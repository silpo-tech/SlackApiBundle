<?xml version="1.0" encoding="UTF-8"?>
<!-- https://phpunit.de/manual/current/en/appendixes.configuration.html -->
<phpunit xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="https://schema.phpunit.de/11.5/phpunit.xsd"
         backupGlobals="false"
         colors="true"
         cacheResult="false"
         testdox="true"
         cacheDirectory=".phpunit.cache"
         bootstrap="tests/bootstrap.php">
  <coverage/>
  <php>
    <env name="APP_ENV" value="test" force="true"/>
    <env name="APP_DEBUG" value="true" force="true"/>
    <env name="SYMFONY_DEPRECATIONS_HELPER" value="disabled=1"/>
    <env name="KERNEL_CLASS" value="SlackApiBundle\Tests\Kernel"/>
  </php>
  <testsuites>
    <testsuite name="Tests">
      <directory>./tests/</directory>
    </testsuite>
  </testsuites>
  <source>
    <include>
      <directory>./src/</directory>
    </include>
  </source>
</phpunit>
